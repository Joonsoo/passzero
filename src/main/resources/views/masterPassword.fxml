<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<BorderPane prefHeight="400.0" prefWidth="500.0" stylesheets="@css/default.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.giyeok.passzero.ui.javafx.MasterPasswordController">
    <bottom>
        <TextArea fx:id="systemInfoLabel" editable="false" focusTraversable="false" prefHeight="50.0">
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </TextArea>
    </bottom>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="30.0">
                    <children>
                        <Label text="Master Password:">
                            <font>
                                <Font size="24.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <HBox prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <Label fx:id="passwordLengthLabel" alignment="CENTER_RIGHT" text="0">
                            <font>
                                <Font size="24.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="18.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="5.0" right="5.0" />
                            </HBox.margin>
                        </PasswordField>
                    </children>
                </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="30.0">
               <children>
                        <Button fx:id="passwordSubmit" mnemonicParsing="false" styleClass="button-primary" text="Enter">
                            <font>
                                <Font size="24.0" />
                            </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                        </Button>
               </children>
            </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
